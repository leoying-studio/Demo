/* pages/discover/index.wxss */
.discover {
   
}
.discover .header-container {
   position: sticky;
   top: 0;
   z-index: 999;
}

.discover .header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: relative;
  font-size: 38rpx;
  background: white;
}

.discover .header-inner {
  padding-bottom: 10px;
  background: white;
} 

.discover .header .underline {
   height: 2px;
   width: 80rpx;
   position: absolute;
   bottom: -10rpx; 
   left: 150rpx;
   background: red;
}

.pages .subject-wrapper {
  padding: 25rpx;
}

.pages .subject {
  width: 100%;
  height: 360rpx;
  display: block;
  padding: 7rpx 0;
}
