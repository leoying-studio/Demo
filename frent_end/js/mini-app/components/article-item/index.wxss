/* components/article-item/index.wxss */
.article-item {
   padding: 28rpx 25rpx;
   margin-bottom: 15rpx;
   background-color: white;
}

.article-item:active {
  background:rgba(240,240,240,0.7); 
}

.article-item .header{
   margin-bottom: 25rpx;
}

.article-item .header text {
   font-size: 46rpx;
   font-weight: 500;
}

.article-item .body {
  margin-bottom: 22rpx;
}
.article-item .body .image {
  display: block;
  width: 100%;
  max-height: 255rpx;
  border-radius: 15rpx;
}

.article-item .footer {
  display: flex;
  height: 65rpx;
}

.article-item .footer .icon {
  width: 65rpx;
  height: 65rpx;
  margin-right: 18rpx;
  border-radius: 10rpx;
}

.article-item .footer .right {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.article-item .footer .right .look {
   font-size: 28rpx;
   padding: 8rpx 12rpx;
   background-color: #ff6f6b;
   color: white;
   border-radius: 28rpx;
   
}