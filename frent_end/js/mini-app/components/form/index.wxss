/* components/form/index.wxss */
.form-container {
   width: 90%;
   position: absolute;
   left: 5%;
   top: 20%;
   padding: 10px;
   box-sizing: border-box;
   font-size: 14px;
   box-shadow: 0 0 1px 1px rgba(0,0,0, .2)
}

.form-container .form .form-item {
   margin: 20px;
   border-bottom: 1px solid #e3e3e3;
}

.form-container .form .form-item input {
   margin-top: 12px;
}

.form-container .form .form-item button {
  height: 32px;
  line-height: 32px;
  font-size: 16px;
}
